<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:id="@+id/recycler_song">

    <LinearLayout
        android:id="@+id/recycler_song_relative"
        android:layout_width="366dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/recycler_song_artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/recycler_song_title"
            android:layout_below="@+id/recycler_song_title"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/recycler_song_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/recycler_song_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/recycler_song_title"
            android:layout_marginEnd="16dp"
            android:layout_toRightOf="@id/recycler_song_title"
            android:layout_weight="1"
            android:textSize="16sp" />


    </LinearLayout>
</LinearLayout>